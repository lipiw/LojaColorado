
<head>
    <title>Entrar</title>
    
</head>
<%- contentFor('body') %>

    <div class="modal-dialog text-center ">
        <div class="col-sm-8 main">
            <div class="modal-content ">
                <form class="col-12 " method="POST" action="http://localhost:3000/login" class="entrar">
                    <div class="form-group " id="user-group ">
                        <input type="email" pattern=".+@gmail.com" required class="form-control " placeholder="Email" name="email" id="email" />
                    </div>
                    <div class="form-group " id="contrasena-group ">
                        <input type="password" minlength="8" required class="form-control " placeholder="Senha " name="senha" id="senha" />
                    </div>
                    <button type="submit" class="btn btn-primary " id="btentrar">
                        <i class="fas fa-sign-in-alt "></i> Entrar </button>

            
                </form>

            </div>
        </div>
    </div>
